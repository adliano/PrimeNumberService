<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@color/black">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/stop_image"
            android:maxHeight="70dp"
            android:maxWidth="70dp"
            android:adjustViewBounds="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:text="@string/str_dialog_msg"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_sides"
            android:layout_marginStart="@dimen/margin_sides"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/str_dialog_pin_number"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editText_pin_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_sides"
            android:layout_marginEnd="@dimen/margin_sides"
            android:padding="5dp"
            android:inputType="numberPassword"
            android:background="@color/whiteSmoke"
            android:textColor="@color/black"
            android:ems="10"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_top"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_sides"
            android:layout_marginStart="@dimen/margin_sides"
            android:padding="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/str_dialog_passphrase"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editText_passphrase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_sides"
            android:layout_marginEnd="@dimen/margin_sides"
            android:padding="5dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:background="@color/whiteSmoke"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>